<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="inc.lilin.crowd.common.database.RoleMapper">
  <resultMap id="BaseResultMap" type="inc.lilin.crowd.common.database.RolePO">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="CHAR" property="name" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from role_t
    where id = #{id,jdbcType=INTEGER}
  </delete>

  <delete id="deleteByIdList" parameterType="java.lang.Integer">
    delete from role_t
    <foreach collection="roleIdList" item="item_id" separator="," open="where id in(" close=")">
      #{item_id}
    </foreach>
  </delete>


  <insert id="insert" parameterType="inc.lilin.crowd.common.database.RolePO">
    insert into role_t (id, name)
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=CHAR})
  </insert>
  <update id="updateByPrimaryKey" parameterType="inc.lilin.crowd.common.database.RolePO">
    update role_t
    set name = #{name,jdbcType=CHAR}
    where id = #{id,jdbcType=INTEGER}
  </update>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select id, name
    from role_t
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, name
    from role_t
  </select>
  <select id="selectRoleByKeyword" resultMap="BaseResultMap">
    select id, name from role_t
    where name like concat("%",#{keyword},"%")
  </select>

  <select id="selectAssignedRole" resultMap="BaseResultMap">
    select id,name
    from role_t
    where id in (
        select role_id
        from inner_admin_role
        where admin_id=#{adminId})
  </select>
  <select id="selectUnAssignedRole" resultMap="BaseResultMap">
    select id,name
    from role_t
    where id not in (
        select role_id
        from inner_admin_role
        where admin_id=#{adminId})
  </select>
</mapper>